<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.geometry.Orientation?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MainController"
            fx:id="mainBorderPane">

    <!-- ***** Zona TOP: Menú y título del archivo ***** -->
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <menus>
                    <!-- Menú Archivo -->
                    <Menu text="Archivo">
                        <MenuItem text="Abrir..." onAction="#onAbrirArchivo"/>
                        <MenuItem text="Salir" onAction="#onSalir"/>
                    </Menu>
                    <!-- Menú Biblioteca -->
                    <Menu text="Biblioteca">
                        <MenuItem text="Actualizar lista" onAction="#onRefrescarBiblioteca"/>
                    </Menu>
                    <!-- Menú Ver -->
                    <Menu text="Ver">
                        <MenuItem text="Pantalla completa" onAction="#onPantallaCompleta"/>
                    </Menu>
                    <!-- Menú Acerca de -->
                    <Menu text="Acerca de">
                        <MenuItem text="Acerca de esta App..." onAction="#onAcercaDe"/>
                    </Menu>
                </menus>
            </MenuBar>

            <!-- Etiqueta: Título del archivo -->
            <Label fx:id="labelTituloArchivo" text="Título del archivo"
                   style="-fx-padding: 5; -fx-font-size: 16;"/>
        </VBox>
    </top>

    <!-- ***** Zona CENTRAL con SplitPane horizontal: left, center, right ***** -->
    <center>
        <!-- SplitPane para panel izquierdo (edición) y resto -->
        <SplitPane orientation="HORIZONTAL">
            <!-- Panel izquierdo: edición -->
            <VBox fx:id="panelEdicion" prefWidth="200" style="-fx-padding: 10;"
                  SplitPane.resizableWithParent="true">
                <Label text="Panel de edición" style="-fx-font-weight: bold;"/>
                <Button text="Cambiar Tamaño" onAction="#onCambiarTamaño"/>
                <Button text="Cambiar Velocidad" onAction="#onCambiarVelocidad"/>
            </VBox>

            <!-- Segundo SplitPane para centro y panel derecho (biblioteca) -->
            <SplitPane orientation="HORIZONTAL">
                <!-- Zona CENTRO: Reproductor (StackPane con MediaView) -->
                <StackPane fx:id="mediaContainer" style="-fx-padding: 10;"
                           SplitPane.resizableWithParent="true">
                    <MediaView fx:id="mediaView" preserveRatio="true"/>
                </StackPane>

                <!-- Panel derecho: biblioteca -->
                <VBox fx:id="panelBiblioteca" prefWidth="200" style="-fx-padding: 10;"
                      SplitPane.resizableWithParent="true">
                    <Label text="Biblioteca" style="-fx-font-weight: bold;"/>
                    <TableView fx:id="tableBiblioteca">
                        <columns>
                            <!-- Ejemplo de mostrar nombre, formato, duración -->
                            <TableColumn text="Nombre"  fx:id="colNombre"/>
                            <TableColumn text="Formato" fx:id="colFormato"/>
                            <TableColumn text="Duración" fx:id="colDuracion"/>
                        </columns>
                    </TableView>
                </VBox>
            </SplitPane>
        </SplitPane>
    </center>

    <!-- ***** Zona INFERIOR: Controles de reproducción ***** -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="btnPlay"  text="Play"  onAction="#onPlay"/>
            <Button fx:id="btnPause" text="Pause" onAction="#onPause"/>
            <Button fx:id="btnStop"  text="Stop"  onAction="#onStop"/>
        </HBox>
    </bottom>

</BorderPane>